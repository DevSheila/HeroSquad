{{#partial "content"}}
    <div class="container mt-5">
        {{#if squad}}
            <div class="row text-center">
                <div class="col-lg-12 col-md-12 col-12 mb-4 image">
                    <div class="image-item">
                        <img  class="img-fluid image-img" src="/images/overlay3.png" alt="">
                        <div class="image-overlay ">
                            <div class="image-info ">
                                <h1 class="text-center">{{squad.name}}</h1>

                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-6">
                                        <div class="image-title">
                                            <p >{{squad.name}}</p>
                                            <p>Cause : {{squad.cause}}</p>
                                            <p>Max Size : {{squad.maxSize}}</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-6">
                                        <div class="image-title">
                                            <h>Squad's Members</h>5
                                            <ol>
                                                {{#each squad.heroes}}
                                                    <div class="image-title">
                                                        <li>{{name}}</li>
                                                    </div>

                                                {{/each}}
                                            </ol>
                                            <div class="row">
                                                <a href="/squads"><button class="btn btn-primary m-2">View All Squads</button></a> <br><br>
                                                <a href="/squad/{{squad.id}}/delete"><button class="btn  btn-danger m-2">Delete Squad</button></a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        {{else}}
            <div class="container">
                <h1 class="text-center feedback">Squad Not Available!</h1>

            </div>
        {{/if}}
    </div>

{{/partial}}
{{> layout.hbs}}