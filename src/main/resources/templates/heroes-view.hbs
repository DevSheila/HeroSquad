{{#partial "content"}}
    <div class="container mt-5">

        <div class="row text-center">
            {{#if heroes}}
                {{#each heroes }}
                    <div class="col-lg-6 col-md-12 col-12 mb-4 image">

                        <div class="image-item">
                            <img  class="img-fluid image-img"src="/images/overlay3.png" alt="">
                            <div class="image-overlay ">
                                <div class="image-info ">
                                    <div class="row">
                                        <!--                                <div class="col-lg-6 col-md-6 col-6">-->
                                        <!--                                    <img class="img-fluid rounded-circle image-img2" src="/images/hero2.png" alt="">-->
                                        <!--                                </div>-->
                                        <div class="col-lg-12 col-md-12 col-12">
                                            <div class="image-title">
                                                <p>NAME: {{name}}</p>
                                                <p>POWERS:{{powers}}</p>
                                                <a href="/heroes/{{id}}"><button class="btn btn-info btn-md">Details</button></a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                {{/each}}
            {{else}}
                <div class="container">
                    <h1 class="text-center feedback">No Heroes Available!</h1>

                </div>
            {{/if}}
        </div>
    </div>
{{/partial}}


{{#partial "footer"}}
    {{#if heroes}}
        <a href="/heroes/delete"><button class="btn btn-lg btn-danger"> Delete All Heroes</button></a>
    {{else}}
    {{/if}}
{{/partial}}
{{> layout.hbs}}


